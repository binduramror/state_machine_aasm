<p id="notice"><%= notice %></p>

<h1>Customers</h1>
<%= link_to 'Rooms List', rooms_path %>


<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Contact no</th>
      <th>Address</th>
      <th>No of persons</th>
      <th>Room</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
  <% if @customers.present? %>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.contact_no %></td>
        <td><%= customer.address %></td>
        <td><%= customer.no_of_persons %></td>
        <td><%= customer.room.room_no %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to '<button type="button" class="btn btn-default" id=customer.room.id>Checkout Room</button>'.html_safe, "#", id: customer.room.id, class: 'checkout' %>
        </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>


