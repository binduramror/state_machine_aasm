<p id="notice"><%= notice %></p>

<h1>Customers</h1>
<%= link_to '<button type="button" class="btn btn-default">List of Available Rooms</button>'.html_safe, rooms_path %>


<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Contact no</th>
      <th>Address</th>
      <th>No of persons</th>
      <th>Room</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
  <% if @customers.present? %>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.contact_no %></td>
        <td><%= customer.address %></td>
        <td><%= customer.no_of_persons %></td>
        <td><%= customer.room.room_no %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
        <% if customer.room.aasm_state.eql?('booked')%>
        <td><%= link_to '<button type="button" class="btn btn-default" >Checkout Room</button>'.html_safe, "#", id: customer.id, class: 'checkout' %>
        <% end %>
        </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>


<script>
$(document).ready(function(){
  $(".checkout").click(function(){
    customer_id = parseInt($(".checkout").attr('id'));
    $.ajax({
	        type:"POST",
	        url: "/rooms/change_state",
	        dataType:"json",
	        data: {customer_id: customer_id},
	        success:function(result){
            $("a[id="+customer_id+"]").hide();
	          $("#state").text(result.aasm_state);
	          $("#notice").append("Room status changed successfully")
	        },
	        error:function(jqXHR,exception){
            $("a[id="+customer_id+"]").show();
            $("#notice").text("There was an error in changing state");
	        }
	      })
    $("p").slideToggle();
  });
});
</script>